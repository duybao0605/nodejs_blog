<div class="mt-4">
  <form method="POST" action="">
    <div class="form-group">
      <label for="search-input">Search input</label>
      <input type="text" name="q" class="form-control" id="search-input" placeholder="Enter search input...">
    </div>

    <div class="form-group">
      <label for="gender-input">Input</label>
      <select name="gender" class="form-control" id="gender-input">
        <option value="">Select gender</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
        <option value="other">Other</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
  </form>
</div>