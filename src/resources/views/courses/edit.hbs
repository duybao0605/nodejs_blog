<div>
  <h3 class="mt-3">Edit courses </h3>
  <form method="POST" action="/courses/{{course._id}}/?_method=PUT">
  
    <div class="form-group">
      <label for="name">Name </label>
      <input type="text" class="form-control" name="name" value="{{course.name}}" id="name">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea type="text" class="form-control" name="description" id="description">{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="videoId">Video Id</label>
      <input type="text" class="form-control" name="videoId" value="{{course.videoId}}" id="videoId">
    </div>
    <div class="form-group">
      <label for="level">Level</label>
      <input type="text" class="form-control" name="level" value="{{course.level}}" id="level">
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>
